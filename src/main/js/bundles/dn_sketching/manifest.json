{
    "name": "dn_sketching",
    "version": "1.1.3-SNAPSHOT",
    "title": "${bundleName}",
    "description": "${bundleDescription}",
    "vendor": "con terra GmbH",
    "keywords": ["sample"],
    "icon": {},
    "main": "",
    "productName": "devnet-mapapps-daylight",
    "dependencies": {
        "ct": "^4.9.0",
        "esri": "^4.14.0",
        "esri-widgets": "^4.9.0",
        "map-widget": "^4.9.0",
        "apprt-binding": "^4.9.0"
    },
    "CSS-Themes-Extension": [
        {
            "name": "*",
            "files": ["./css/styles.css"]
        }
    ],
    "layout-widgets": [
        {
            "widgetRole": "sketchingWidget",
            "window": {
                "title": "${ui.windowTitle}",
                "dockTool": "daylightToggleTool",
                "closable": true,
                "maximizable": false,
                "minimizeOnClose": true,
                "resizable": false,
                "marginBox": {
                    "w": 390,
                    "h": 220,
                    "l": 20,
                    "t": 125
                },
                "windowClass": "daylight-window"
            }
        },
        {
            "widgetRole": "sketchingWidget",
            "sublayout": ["mobile_landscape", "mobile_portrait"],
            "window": {
                "dockingBar": "${id}-dockingBarBottomLeft",
                "draggable": false,
                "fixEdgesInViewport": {
                    "l": true,
                    "r": true
                },
                "marginBox": {
                    "h": 250,
                    "b": 40,
                    "r": 0,
                    "l": 0
                }
            }
        },
        {
            "widgetRole": "sketchingWidget",
            "sublayout": ["mobile_landscape"],
            "window": {
                "marginBox": {
                    "h": 250,
                    "w": 350,
                    "b": 0,
                    "r": 0
                }
            }
        }
    ],
    "components": [
        {
            "name": "SketchingWidgetFactory",
            "provides": ["dijit.Widget"],
            "instanceFactory": true,
            "properties": {
                "widgetRole": "sketchingWidget"
            },
            "references": [
                // {
                //     "name": "_mapWidgetModel",
                //     "providing": "map-widget.MapWidgetModel"
                // }
            ]
        },
        {
            "name": "SketchingToggleTool2",
            "impl": "ct/tools/Tool",
            "provides": ["ct.tools.Tool"],
            "propertiesConstructor": true,
            "properties": {
                "id": "sketchingToggleTool2",
                "title": "${tool.title}",
                "tooltip": "${tool.tooltip}",
                "iconClass": "icon-transparency",
                // "activateHandler": "onToolActivated",
                // "deactivateHandler": "onToolDeactivated",
                "toolRole": "toolset",
                "togglable": true,
                "noGroup": true,
                "rules": {
                    "viewmode": "3D",
                    "ruleSuccessProperty": "visibility"
                }
            },
            "references": [
                // {
                //     "name": "handlerScope",
                //     "providing": "dn_sketching.SketchingWidgetController"
                // }
            ]
        }
    ]
}
